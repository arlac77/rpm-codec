{
  "name": "rpm-codec",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/codec.js",
  "module": "src/codec.js",
  "description": "Encode/decode rpm lead/header(s)",
  "keywords": [
    "RPM",
    "package",
    "stream"
  ],
  "author": [
    "Jochen Hinrichsen <jochen.hinrichsen@kambrium.net>",
    "Markus Felten <markus.felten@gmx.de>"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "MIT",
  "scripts": {
    "test": "ava",
    "cover": "nyc --temp-directory build/nyc ava",
    "precover": "rollup -c tests/rollup.config.js",
    "pretest": "rollup -c tests/rollup.config.js",
    "posttest": "npm run prepare && markdown-doctest",
    "prepare": "rollup -c",
    "docs": "documentation readme src/codec.js --section=API",
    "semantic-release": "semantic-release",
    "lint": "documentation lint src/codec.js",
    "travis-deploy-once": "travis-deploy-once"
  },
  "dependencies": {
    "cpio-stream": "^1.4.1",
    "lzma-native": "^3.0.8"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "markdown-doctest": "^0.9.1",
    "nyc": "^13.0.0",
    "rollup": "^0.62.0",
    "rollup-plugin-multi-entry": "^2.0.2",
    "semantic-release": "^15.6.3",
    "documentation": "^8.0.0",
    "travis-deploy-once": "^5.0.1"
  },
  "engines": {
    "node": ">=8.11"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/rpm-codec.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/rpm-codec/issues"
  },
  "homepage": "https://github.com/arlac77/rpm-codec#readme",
  "ava": {
    "files": [
      "build/*-test.js"
    ],
    "presets": [
      "latest"
    ],
    "require": [
      "babel-register"
    ]
  },
  "nyc": {
    "include": [
      "build/*-test.js"
    ],
    "reporter": [
      "lcov"
    ],
    "report-dir": "./build/coverage"
  },
  "xo": {
    "space": true
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  }
}
