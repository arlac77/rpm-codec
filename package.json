{
  "name": "rpm-codec",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/codec.js",
  "module": "src/codec.js",
  "description": "Encode/decode rpm lead/header(s)",
  "keywords": [
    "RPM",
    "package",
    "stream"
  ],
  "author": [
    "Jochen Hinrichsen <jochen.hinrichsen@kambrium.net>",
    "Markus Felten <markus.felten@gmx.de>"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "MIT",
  "scripts": {
    "cover": "c8 --temp-directory build/coverage ava && c8 report -r lcov --temp-directory build/coverage",
    "docs": "documentation readme src/codec.js --section=API",
    "lint": "documentation lint src/codec.js",
    "posttest": "npm run prepare && markdown-doctest",
    "prepare": "rollup -c",
    "test": "ava"
  },
  "dependencies": {
    "cpio-stream": "^1.4.1",
    "lzma-native": "^4.0.3"
  },
  "devDependencies": {
    "ava": "^1.3.1",
    "c8": "^3.4.0",
    "documentation": "^9.3.0",
    "esm": "^3.2.13",
    "markdown-doctest": "^0.9.1",
    "rollup": "^1.6.0",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-executable": "^1.4.4",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "semantic-release": "^15.13.3"
  },
  "engines": {
    "node": ">=10.15.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/rpm-codec.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/rpm-codec/issues"
  },
  "homepage": "https://github.com/arlac77/rpm-codec#readme",
  "ava": {
    "files": [
      "tests/*-test.js",
      "tests/*-test.mjs"
    ],
    "require": [
      "esm"
    ],
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "js",
      "mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  }
}
