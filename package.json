{
  "name": "rpm-codec",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "type": "module",
  "main": "src/codec.mjs",
  "exports": {
    ".": "src/codec.mjs"
  },
  "description": "Encode/decode rpm lead/header(s)",
  "keywords": [
    "RPM",
    "package",
    "stream"
  ],
  "author": [
    "Jochen Hinrichsen <jochen.hinrichsen@kambrium.net>",
    "Markus Felten <markus.felten@gmx.de>"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "test": "ava --timeout 2m",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme src/codec.mjs --section=API",
    "lint": "documentation lint src/codec.mjs"
  },
  "dependencies": {
    "cpio-stream": "^1.4.1",
    "lzma-native": "^6.0.1"
  },
  "devDependencies": {
    "ava": "^3.11.0",
    "c8": "^7.2.1",
    "documentation": "^13.0.2",
    "semantic-release": "^17.1.1"
  },
  "engines": {
    "node": ">=12.16.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/rpm-codec.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/rpm-codec/issues"
  },
  "homepage": "https://github.com/arlac77/rpm-codec#readme",
  "template": {
    "inheritFrom": [
      "arlac77/template-esm-only",
      "arlac77/template-github"
    ]
  }
}
