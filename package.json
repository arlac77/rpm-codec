{
  "name": "rpm-codec",
  "version": "0.0.0-semantic-release",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "main": "src/codec.mjs",
  "module": "src/codec.mjs",
  "description": "Encode/decode rpm lead/header(s)",
  "keywords": [
    "RPM",
    "package",
    "stream"
  ],
  "author": [
    "Jochen Hinrichsen <jochen.hinrichsen@kambrium.net>",
    "Markus Felten <markus.felten@gmx.de>"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "MIT",
  "scripts": {
    "cover": "c8 -x 'tests/**' --temp-directory build/tmp ava && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme src/codec.mjs --section=API",
    "lint": "documentation lint src/codec.mjs",
    "posttest": "markdown-doctest",
    "test": "ava"
  },
  "dependencies": {
    "cpio-stream": "^1.4.1",
    "lzma-native": "^4.0.5"
  },
  "devDependencies": {
    "ava": "^2.2.0",
    "c8": "^5.0.2",
    "documentation": "^12.0.1",
    "esm": "^3.2.25",
    "markdown-doctest": "^0.9.1",
    "semantic-release": "^15.13.19"
  },
  "engines": {
    "node": ">=10.16.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/rpm-codec.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/rpm-codec/issues"
  },
  "homepage": "https://github.com/arlac77/rpm-codec#readme",
  "ava": {
    "files": [
      "tests/*-test.mjs"
    ],
    "require": [
      "esm"
    ],
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template-esm-only.git"
    }
  }
}
