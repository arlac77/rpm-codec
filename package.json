{
  "name": "rpm-codec",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "type": "module",
  "main": "src/codec.mjs",
  "module": "src/codec.mjs",
  "description": "Encode/decode rpm lead/header(s)",
  "keywords": [
    "RPM",
    "package",
    "stream"
  ],
  "author": [
    "Jochen Hinrichsen <jochen.hinrichsen@kambrium.net>",
    "Markus Felten <markus.felten@gmx.de>"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme src/codec.mjs --section=API",
    "lint": "documentation lint src/codec.mjs",
    "posttest": "markdown-doctest",
    "test": "ava",
    "prepare": "rollup -c",
    "start": "rollup -c -w"
  },
  "dependencies": {
    "cpio-stream": "^1.4.1",
    "lzma-native": "^6.0.0",
    "mf-styling": "arlac77/mf-styling",
    "svelte-common": "^1.3.0",
    "svelte-guard-history-router": "^1.1.11",
    "svelte-session-manager": "^1.0.5"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@semantic-release/exec": "^5.0.0",
    "ava": "^2.4.0",
    "c8": "^7.0.1",
    "documentation": "^12.1.4",
    "esm": "^3.2.25",
    "markdown-doctest": "^1.0.0",
    "npm-pkgbuild": "^6.11.4",
    "rollup": "^1.30.1",
    "rollup-plugin-consts": "^1.0.1",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-dev": "^1.1.1",
    "rollup-plugin-svelte": "^5.1.1",
    "rollup-plugin-terser": "^5.2.0",
    "semantic-release": "^17.0.1",
    "svelte": "^3.18.1"
  },
  "engines": {
    "node": ">=12.14.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/rpm-codec.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/rpm-codec/issues"
  },
  "homepage": "https://github.com/arlac77/rpm-codec#readme",
  "config": {
    "base": "/services/rpm-codec/",
    "api": "/services/rpm-codec/api",
    "proxyTarget": "https://somewhere/"
  },
  "pacman": {
    "groups": "{{group}}",
    "hooks": "pacman/hooks.sh",
    "installdir": "/services/rpm-codec/frontend",
    "depends": {
      "systemd": ">=244.1"
    },
    "content": {
      "${installdir}/": {
        "base": "public"
      },
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    }
  },
  "release": {
    "plugins": [
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} pkgbuild pacman makepkg"
        }
      ],
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator"
    ]
  },
  "ava": {
    "files": [
      "tests/*-test.mjs"
    ],
    "require": [
      "esm"
    ],
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template-esm-only.git"
    }
  }
}
